<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.firstscreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elitte Halls"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="90dp"
            android:layout_marginStart="80dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginStart="24dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/adlam_display"
            android:text="Access Your Events \nand Manage your \nBookings Seamlessly"
            android:textColor="#3A0819"
            android:textSize="20dp"/>

    </RelativeLayout>

    <!-- Lottie Animation - Button Ke Upar -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
android:layout_marginStart="90dp"
        android:layout_above="@id/getstartedbtn"
        app:lottie_fileName="giff.lottie"
    app:lottie_loop="true"
    app:lottie_autoPlay="true"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/getstartedbtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:cornerRadius="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:text="Get Started"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#895BB2"
        />

</RelativeLayout>
